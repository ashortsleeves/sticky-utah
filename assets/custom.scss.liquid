//===============================================
//================== Variables ==================
//===============================================

$color-primary:   #5c5eaa;
$color-secondary: #54AB71;
$color-grey:      #cac9c9;

//Breakpoint variables
$width_mobile:          480px;
$width_phablet:         576px;
$width_tablet:          768px;
$width_laptop:          992px;
$width_desktop:         1200px;

@mixin mobile { @media (min-width: #{$width_mobile}) { @content; } }

@mixin phablet { @media (min-width: #{$width_phablet}) { @content; } }

@mixin tablet { @media (min-width: #{$width_tablet}) { @content; } }

@mixin laptop { @media (min-width: #{$width_laptop}) { @content; } }

@mixin desktop { @media (min-width: #{$width_desktop}) { @content; } }


//===============================================
//=================== Header ====================
//===============================================
#SearchDrawer {
  z-index: 999999;
}

.js-menu--is-open {
  display: block;
  transform: translateY(calc(0% + 50px)) !important;

  ul {
    box-shadow: inset 0px 8px 8px -10px rgba(0,0,0,0.5);
    // padding-top: 10px;
  }
}

header.custom-header {
  z-index: 999;
  position: relative;
  display: flex;
  justify-content: center;
  background-color: $color-grey;

  .header-flex-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    max-width: 1200px;
    padding: 0 15px;
    z-index: 999;

    nav.custom-nav {
      display: none;

      @include tablet {
        display: block;
      }
    }

    @include laptop {
      height: 100px;
    }

    h1 {
      margin-bottom: 0;
      line-height: 0rem;
      display: none;

      @include mobile {
        display: block;
      }

      span {
        display: none;

        @include tablet {
          &:nth-of-type(2) {
            display: inline;
          }
        }

        @include laptop {
          display: inline;
        }
      }
    }

    .site-nav {
      margin: 0;
    }

    a.site-header__logo-link {
      text-transform: uppercase;
      font-size: 24px;
      font-weight: bold;
      text-align: left;
      // color: #fff;
      // transition: 0.3s;
      //
      // &:hover,
      // &:focus {
      //   color:$color-secondary;
      // }
    }

    h1,
    .nav-wrap {
      width: calc(50% - 44px);

      @include laptop {
      width: calc(50% - 61px);
      }
    }

    .nav-wrap {
      display: flex;
      justify-content: flex-end;
      align-items: center;

      li,
      button.site-nav__link span {
        font-size: 14px;

        @include laptop {
          font-size: 16px;
        }
      }

      .button-wrap {
        display: flex;
        position: relative;

        button.site-header__menu {
          display: inline-block;
          width: 36px;

          &[aria-expanded="true"] {
            i.fa-bars {
              display: none;
            }
          }

          @include tablet {
            display: none;
          }
        }

        i.fa-close {
          width: auto;
          height: auto;
        }
      }

      button.site-nav__link {
        svg {
          display: none;
        }

        &::after {
          content: "\f103";
          position: relative;
          display: inline;
          font-family: FontAwesome;
        }
      }
    }

    .img-wrap {
      width: 68px;
      height: 50px;
      z-index: 999;
      position: relative;

      @include tablet {
        width: 88px;
        height: 70px;
      }

      @include laptop {
        width: 120px;
      }

      img {
        position: absolute;
        max-width: none;
        height: auto;
        width: 50px;
        left: calc(50% - 25px);
        top: 2px;

        @include tablet {
          width: 80px;
          left: calc(50% - 40px);
        }

        @include laptop {
          width: 100px;
          left: calc(50% - 50px);
          top: -10px;
        }
      }
    }
  }
}


//===============================================
//=================== Styles ====================
//===============================================

.main-content {
  padding-bottom: 30px;

  @include laptop {
    padding-bottom: 55px;
  }
}

.tab-section {
  padding: 0;
}

.collection-tabs {
  ul.sl-tab-list {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;

    @include phablet {
      border-bottom: solid 1px #e4e4e4;
    }

    li.sl-tab-single {
      width: 50%;

      @include phablet {
        width: auto;
      }

      a {
        display: block;
        color: #fff;
        position: relative;
        padding: 5px 5px 5px 10px;
        font-weight: 600;
        text-transform: uppercase;
        transition: 0.3s;
        z-index: 999;
        margin-bottom: 3px;
        font-size: 14px;

        @include mobile {
          font-size: 16px;
        }

        &::before {
          content: " ";
          display: block;
          position: absolute;
          left: 0;
          right: 0;
          top: 0;
          bottom: 0;
          background-color: $color-primary;
          z-index: -2;
          transform: skewX(-15deg);
          border-left: solid 3px #fff;
          transition: 0.3s;
          padding: 7px 10px;
        }

        @include phablet {
          margin-bottom: 0;
          font-size: 15px;
        }

        @include tablet {
          padding: 15px;
          font-size: 16px;
        }

        @include desktop {
          padding: 15px 25px;
        }

        &:hover,
        &:focus {
          &::before {
            background-color: lighten($color-primary, 10%);
          }
        }
      }


      &:nth-of-type(odd) {
        a {
          &::after {
            content: " ";
            display: block;
            position: absolute;
            width: 20px;
            left: -6px;
            top: 0;
            bottom: 0;
            background-color: $color-primary;
            z-index: -1;

            @include phablet {
              display: none;
            }
          }
        }
      }

      &.sl-tab-all {
        a {
          &::before,
          &::after {
            background-color: $color-secondary;
            border-left: transparent;
          }

          &:hover,
          &:focus {
            &::before {
              background-color: lighten($color-secondary, 10%);
            }
          }
        }
      }
    }
  }
}

