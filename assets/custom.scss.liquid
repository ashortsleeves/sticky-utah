//===============================================
//=========== Interior Product Pages ============
//===============================================

.btn--secondary {
  border: solid 1px $color-primary!important;
  color: $color-primary!important;
  font-weight: 600;

  &:hover,
  &:focus {
    border: solid 1px lighten($color-primary, 10%)!important;
    color: lighten($color-primary, 10%)!important;
  }
}

h1.product-single__title {
  font-weight: 600;
}

.product-form__item {
  flex-basis: 100% !important;

  button.btn--secondary-accent,
  .shopify-payment-button button {
    font-weight: 600;
  }

  button.btn--secondary-accent {
    border: solid 1px $color-primary;
    color: $color-primary;

    &:hover,
    &:focus {
      border: solid 1px lighten($color-primary, 10%);
      color: lighten($color-primary, 10%);
    }
  }

  .shopify-payment-button button {
    background-color: $color-primary;

    &:hover,
    &:focus {
      background-color: lighten($color-primary, 10%) !important;
    }
  }
}

//===============================================
//=================== Footer ====================
//===============================================
footer {
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: $color-primary;
  color: #fff;
  padding: 15px;

  @include tablet {
    padding: 60px 15px;
  }

  .sl-container {
    display: flex;
    justify-content: flex-start;
    align-items: flex-start;
    flex-wrap: wrap;

    .sl-column {
      width: 100%;
      margin-bottom: 15px;

      .bold {
        color: #fff;
        font-weight: 900;
        text-transform: uppercase;
        display: block;
        margin-bottom: 5px;
      }

      a {
        display: block;
        color: #fff;
        margin-bottom: 5px;
      }

      .title {
        font-size: 20px;

        br {
          display: none;
        }

        @include laptop {
          font-size: 16px;

          br {
            display: block;
          }
        }
      }
    }


    @include laptop {
      .sl-column {
        width: 24%;
      }

      .big-boy {
        width: 28%;
      }
    }

    @include desktop {
      .sl-column {
        width: 25%;
      }

      .big-boy {
        width: 25%;
      }
    }
  }
}

