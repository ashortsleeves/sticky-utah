//===========================
//======== Variables ========
//===========================

$color-primary:   #59367b;
$color-secondary: #80c342;

//Breakpoint variables
$width_mobile:          480px;
$width_phablet:         576px;
$width_tablet:          768px;
$width_laptop:          992px;
$width_desktop:         1200px;

@mixin mobile { @media (min-width: #{$width_mobile}) { @content; } }

@mixin phablet { @media (min-width: #{$width_phablet}) { @content; } }

@mixin tablet { @media (min-width: #{$width_tablet}) { @content; } }

@mixin laptop { @media (min-width: #{$width_laptop}) { @content; } }

@mixin desktop { @media (min-width: #{$width_desktop}) { @content; } }

//===========================
//========= Styles ==========
//===========================
header.custom-header {
  z-index: 999;
  position: relative;
  display: flex;
  justify-content: center;

  .header-flex-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    max-width: 1200px;
    padding: 0 15px;


    nav.custom-nav {
      display: none;

      @include tablet {
        display: block;
      }
    }

    @include laptop {
      height: 100px;
    }

    h1 {
      margin-bottom: 0;
      line-height: 0rem;

      span {
        display: none;

        @include tablet {
          display: inline;
        }
      }
    }

    .site-nav {
      margin: 0;
    }

    a.site-header__logo-link {
      text-transform: uppercase;
      font-size: 24px;
      font-weight: bold;
      text-align: left;
    }

    h1,
    .nav-wrap {
      width: calc(50% - 61px);
    }

    .nav-wrap {
      display: flex;
      justify-content: flex-end;

      .button-wrap {
        display: flex;
      }
    }

    .img-wrap {
      width: 120px;
      height: 70px;
      position: relative;
      background-color: red;

      img {
        position: absolute;
        max-width: none;
        height: auto;
        width: 100px;

        @include tablet {
          width: 130px;
          left: -30px;
        }

        @include laptop {
          width: 170px;
          left: -36px;
        }
      }

    }
  }
}

.tab-section {
  padding: 0;
}

.collection-tabs {
  ul.sl-tab-list {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;

    @include phablet {
      border-bottom: solid 1px #e4e4e4;
    }

    li.sl-tab-single {
      width: 50%;

      @include phablet {
        width: auto;
      }

      a {
        display: block;
        color: #fff;
        position: relative;
        padding: 7px 10px;
        font-weight: 600;
        text-transform: uppercase;
        transition: 0.3s;
        z-index: 999;
        margin-bottom: 3px;

        &::before {
          content: " ";
          display: block;
          position: absolute;
          left: 0;
          right: 0;
          top: 0;
          bottom: 0;
          background-color: $color-primary;
          z-index: -2;
          transform: skewX(-15deg);
          border-left: solid 3px #fff;
          transition: 0.3s;
        }

        @include phablet {
          margin-bottom: 0;
          font-size: 15px;
        }

        @include tablet {
          padding: 15px;
          font-size: 16px;
        }

        @include desktop {
          padding: 15px 25px;
        }

        &:hover,
        &:focus {
          &::before {
            background-color: lighten($color-primary, 10%);
          }
        }
      }


      &:nth-of-type(odd) {
        a {
          &::after {
            content: " ";
            display: block;
            position: absolute;
            width: 20px;
            left: -6px;
            top: 0;
            bottom: 0;
            background-color: $color-primary;
            z-index: -1;

            @include phablet {
              display: none;
            }
          }
        }
      }

      &.sl-tab-all {
        a {
          &::before,
          &::after {
            background-color: $color-secondary;
            border-left: transparent;
          }

          &:hover,
          &:focus {
            &::before {
              background-color: lighten($color-secondary, 10%);
            }
          }
        }
      }
    }
  }
}

#shopify-section-hero {
  padding-bottom:15px;


  .hero--medium {
    background-position: 90% 100%!important;
    height: 200px;
  }

  @include tablet {
    padding-bottom: 90px;

    .hero--medium {
      height: 450px;
    }
  }
}
