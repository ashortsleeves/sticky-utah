//===============================================
//================== Variables ==================
//===============================================

$color-primary:     #5c5eaa;
$color-secondary:   #54AB71;
$color-grey:        #cac9c9;
$header-color:      #fff;
$header-text-color: #333;

//Breakpoint variables
$width_mobile:          480px;
$width_phablet:         576px;
$width_tablet:          768px;
$width_laptop:          992px;
$width_desktop:         1200px;

@mixin mobile { @media (min-width: #{$width_mobile}) { @content; } }

@mixin phablet { @media (min-width: #{$width_phablet}) { @content; } }

@mixin tablet { @media (min-width: #{$width_tablet}) { @content; } }

@mixin laptop { @media (min-width: #{$width_laptop}) { @content; } }

@mixin desktop { @media (min-width: #{$width_desktop}) { @content; } }


//===============================================
//=================== Header ====================
//===============================================
#SearchDrawer {
  z-index: 999999;
}

.js-menu--is-open {
  display: block;
  transform: translateY(calc(0% + 50px)) !important;

  ul {
    box-shadow: inset 0px 8px 8px -10px rgba(0,0,0,0.5);
    // padding-top: 10px;
  }
}

header.custom-header {
  z-index: 999;
  position: relative;
  display: flex;
  justify-content: center;
  box-shadow: 0px -14px 38px -2px rgba(0,0,0,0.55);
  background-color: $header-color;

  .header-flex-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    max-width: 1200px;
    padding: 0 15px;
    z-index: 999;
    height: 75px;

    @include laptop {
      height: 100px;
    }

    nav.custom-nav {
      display: none;

      @include tablet {
        display: block;
      }
    }

    .site-nav {
      margin: 0;
    }

    .nav-wrap {
      display: flex;
      justify-content: flex-end;
      align-items: center;
      z-index: 999;

      li,
      button.site-nav__link span {
        font-size: 14px;

        @include laptop {
          font-size: 16px;
        }
      }

      .button-wrap {
        display: flex;
        position: relative;

        button.site-header__menu {
          display: inline-block;
          width: 36px;

          &[aria-expanded="true"] {
            i.fa-bars {
              display: none;
            }
          }

          @include tablet {
            display: none;
          }
        }

        i.fa-close {
          width: auto;
          height: auto;
        }
      }

      button.site-nav__link {
        svg {
          display: none;
        }

        &::after {
          content: "\f103";
          position: relative;
          display: inline;
          font-family: FontAwesome;
        }
      }
    }

    .logo-wrap {
      margin-bottom: -52px;
      position: relative;
      z-index: 999;
      margin-top: -28px;

      @include laptop {
        margin-bottom: -35px;
        margin-top: -28px;
        padding-bottom: 5px;
        margin-top: 0;
      }

      img.logo {
        width: 60px;
        margin-right: 5px;

        @include laptop {
          width: 85px;
        }
      }

      &::before {
        z-index: -2;
        display: block;
        content: " ";
        position: absolute;
        // right: -10px;
        right: -30px;
        bottom: 0;
        width: 100vw;
        height: calc(100% + 50px);
        background-color: $header-color;
        transform: skewX(-15deg);
        box-shadow: 0px -14px 38px -2px rgba(0,0,0,0.55);
      }

      &::after {
        z-index: -1;
        display: block;
        content: " ";
        position: absolute;
        bottom: 17px;
        left: calc(100% - 10px);
        height: 110px;
        width: 120px;
        background-color: $header-color;

        @include laptop {
          bottom: 29px;
        }
      }
    }

    h1 {
      display: inline-block;
      vertical-align: top;
      padding-left: 10px;
      margin: 0;
      margin-right: auto;
      z-index: 999;
      height: 42px;


      @include mobile {
        padding-left: 30px;
      }

      @include laptop {
        width: 250px;
      }

      @include desktop {
        width: auto;
      }

      a.site-header__logo-link {
        text-transform: uppercase;
        font-size: 18px;
        font-weight: bold;
        text-align: left;
        color: $header-text-color;

        span {
          display: none;

          @include laptop {
            display: inline;
          }
        }
      }

      @include laptop {
        // width: 150px;

        a.site-header__logo-link {
          font-size: 24px;
        }
      }
    }
  }
}


//===============================================
//=================== Styles ====================
//===============================================

.main-content {
  padding-bottom: 30px;
  padding-top: 90px;

  [class*="index-section--flush"]:first-child {
    margin-top: -90px;
  }

  @include laptop {
    padding-bottom: 55px;
    padding-top: 120px;

    [class*="index-section--flush"]:first-child {
      margin-top: -120px;
    }
  }
}

.tab-section {
  padding: 0;
}

.collection-tabs {
  ul.sl-tab-list {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;

    @include phablet {
      border-bottom: solid 1px #e4e4e4;
    }

    li.sl-tab-single {
      width: 50%;

      @include phablet {
        width: auto;
      }

      a {
        display: block;
        color: #fff;
        position: relative;
        padding: 5px 5px 5px 10px;
        font-weight: 600;
        text-transform: uppercase;
        transition: 0.3s;
        z-index: 999;
        margin-bottom: 3px;
        font-size: 14px;

        @include mobile {
          font-size: 16px;
        }

        &::before {
          content: " ";
          display: block;
          position: absolute;
          left: 0;
          right: 0;
          top: 0;
          bottom: 0;
          background-color: $color-primary;
          z-index: -2;
          transform: skewX(-15deg);
          border-left: solid 3px #fff;
          transition: 0.3s;
          padding: 7px 10px;
        }

        @include phablet {
          margin-bottom: 0;
          font-size: 15px;
        }

        @include tablet {
          padding: 15px;
          font-size: 16px;
        }

        @include desktop {
          padding: 15px 25px;
        }

        &:hover,
        &:focus {
          &::before {
            background-color: lighten($color-primary, 10%);
          }
        }
      }


      &:nth-of-type(odd) {
        a {
          &::after {
            content: " ";
            display: block;
            position: absolute;
            width: 20px;
            left: -6px;
            top: 0;
            bottom: 0;
            background-color: $color-primary;
            z-index: -1;

            @include phablet {
              display: none;
            }
          }
        }
      }

      &.sl-tab-all {
        a {
          &::before,
          &::after {
            background-color: $color-secondary;
            border-left: transparent;
          }

          &:hover,
          &:focus {
            &::before {
              background-color: lighten($color-secondary, 10%);
            }
          }
        }
      }
    }
  }
}

